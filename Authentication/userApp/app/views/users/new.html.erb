<h1> Sign Up </h1>
<% if @user.errors.any?%>
    <ul>
        <%@user.errors.full_messages.each do |m|%>
        <li> <%= m %>
        </li>
        <%end%>
    </ul>
<%end %>


<%= form_for @user do |f|%>
<div>
    <%=f.label :email%>
    <%=f.email_field :email%>
</div>

<div>
    <%=f.label :password%>
    <%=f.password_field :password%>
</div>

<div>
    <%=f.label :password_confirmation%>
    <%=f.password_field :password_confirmation%>
</div>

<%= f.submit 'Sign Up'%>
<% end%>