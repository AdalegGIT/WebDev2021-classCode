<%= form_for [@photo, @comment] do |form| %>
 
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_field :message %>
  </div>

  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
